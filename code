    <script>
        function showTab(tabName) {
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));

            const navTabs = document.querySelectorAll('.nav-tab');
            navTabs.forEach(tab => tab.classList.remove('active'));

            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function calculateFastlane() {
            const targetWealth = parseFloat(document.getElementById('targetWealth').value);
            const annualProfit = parseFloat(document.getElementById('annualProfit').value);
            const exitMultiple = parseFloat(document.getElementById('exitMultiple').value);
            const buildYears = parseFloat(document.getElementById('buildYears').value);
            const slowlaneInvestment = parseFloat(document.getElementById('slowlaneInvestment').value);
            const slowlaneReturn = parseFloat(document.getElementById('slowlaneReturn').value) / 100;

            if (!targetWealth || !annualProfit || !exitMultiple || !buildYears || !slowlaneInvestment || !slowlaneReturn) {
                alert('LÃ¼tfen tÃ¼m alanlarÄ± doldurun!');
                return;
            }

            // Fastlane calculations
            const businessValue = annualProfit * exitMultiple;
            const fastlaneTime = buildYears;
            
            let fastlaneOutcome;
            if (businessValue >= targetWealth) {
                fastlaneOutcome = `âœ… BAÅARILI! ${formatCurrency(businessValue)} deÄŸere ulaÅŸÄ±rsÄ±nÄ±z!`;
            } else {
                const shortfall = targetWealth - businessValue;
                fastlaneOutcome = `âš ï¸ Hedefe ${formatCurrency(shortfall)} eksik. KarÄ± veya Ã§Ä±kÄ±ÅŸ katsayÄ±sÄ±nÄ± artÄ±rÄ±n.`;
            }

            // Slowlane calculations
            const monthlyInvestment = slowlaneInvestment;
            const monthlyReturn = slowlaneReturn / 12;
            
            // Calculate months needed using compound interest formula
            const months = Math.log((targetWealth * monthlyReturn / monthlyInvestment) + 1) / Math.log(1 + monthlyReturn);
            const slowlaneYears = months / 12;
            const slowlaneTotalInvested = monthlyInvestment * months;

            let slowlaneTime, slowlaneOutcome;
            if (slowlaneYears > 100 || isNaN(slowlaneYears)) {
                slowlaneTime = '100+ yÄ±l (Neredeyse imkansÄ±z!)';
                slowlaneOutcome = 'âŒ Bu parametrelerle hedefi gÃ¶remeyeceksiniz';
            } else {
                slowlaneTime = `${Math.ceil(slowlaneYears)} yÄ±l`;
                slowlaneOutcome = `${Math.ceil(slowlaneYears)} yÄ±l sonra hedefe ulaÅŸÄ±rsÄ±nÄ±z`;
            }

            // Display results
            document.getElementById('businessValue').textContent = formatCurrency(businessValue);
            document.getElementById('fastlaneTime').textContent = `${fastlaneTime} yÄ±l`;
            document.getElementById('fastlaneOutcome').textContent = fastlaneOutcome;
            
            document.getElementById('slowlaneTime').textContent = slowlaneTime;
            document.getElementById('slowlaneInvested').textContent = formatCurrency(slowlaneTotalInvested);
            document.getElementById('slowlaneOutcome').textContent = slowlaneOutcome;

            // Comparison message
            let message = '';
            const timeDiff = Math.ceil(slowlaneYears) - fastlaneTime;
            
            if (timeDiff > 0) {
                message = `
                    <h3 style="color: #DD2476; margin-bottom: 20px; font-size: 1.8em;">ğŸ† KARÅILAÅTIRMA SONUCU</h3>
                    <p style="font-size: 1.25em; color: #2d3436; line-height: 1.8; text-align: center;">
                        <strong style="color: #00b894;">HIZLI ÅERÄ°T:</strong> ${fastlaneTime} yÄ±lda hedefe ulaÅŸÄ±rsÄ±nÄ±z!<br>
                        <strong style="color: #f57f17;">YAVAÅ ÅERÄ°T:</strong> ${Math.ceil(slowlaneYears)} yÄ±lda hedefe ulaÅŸÄ±rsÄ±nÄ±z!<br><br>
                        <span style="font-size: 1.4em; color: #DD2476; font-weight: bold;">
                            âš¡ HÄ±zlÄ± ÅŸerit ${timeDiff} YIL DAHA HIZLI! âš¡
                        </span>
                    </p>
                    <p style="margin-top: 25px; font-size: 1.1em; color: #636e72; text-align: center;">
                        ${fastlaneTime} yÄ±l mÄ± Ã§alÄ±ÅŸmak istersiniz yoksa ${Math.ceil(slowlaneYears)} yÄ±l mÄ±?<br>
                        ${fastlaneTime + 30} yaÅŸÄ±nda zengin olmak mÄ± yoksa ${Math.ceil(slowlaneYears) + 30} yaÅŸÄ±nda mÄ±?<br><br>
                        SeÃ§im sizin! ğŸš€
                    </p>
                `;
            } else {
                message = `
                    <h3 style="color: #DD2476; margin-bottom: 20px;">âš ï¸ DÄ°KKAT</h3>
                    <p style="font-size: 1.1em; color: #2d3436;">
                        YavaÅŸ ÅŸerit bu parametrelerle Ã§ok uzun sÃ¼rÃ¼yor veya imkansÄ±z!
                        HÄ±zlÄ± ÅŸerit tek gerÃ§ekÃ§i seÃ§eneÄŸiniz gibi gÃ¶rÃ¼nÃ¼yor.
                    </p>
                `;
            }

            document.getElementById('comparisonMessage').innerHTML = message;
            document.getElementById('fastlaneResult').style.display = 'block';
            document.getElementById('fastlaneResult').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }
